{{ form_start(form) }}
<div class="field">
  {% if edit is null %}
    <div class="control">
  {% else %}
    <div class="control hidden">
  {% endif %}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email) }}
    </div>
  </div>
  <div class="field">
    <div class="control">
        {{ form_widget(form.name) }}
    </div>
  </div>
  <div class="field">
    <div class="control">
        {{ form_widget(form.avatar) }}
    </div>
  </div>
  <div class="field">
    <div class="control">
        {{ form_widget(form.password) }}
    </div>
  </div>
  <br>
  <button class="button is-block is-fullwidth is-primary is-medium is-rounded" type="submit">
    {{ button_label|default('S\'enregistrer') }}</button>
{{ form_end(form) }}
