{% extends 'base.html.twig' %}
{% block title %}Snowtricks - Login{% endblock %}

{% block stylesheets %}
    {{parent()}}
{% endblock %}
{% block javascripts %}
  {{parent()}}
  {{ encore_entry_link_tags('login') }}
{% endblock %}

  {% block body %}
  
    <section class="hero is-fullheight">
      <div class="hero-body has-text-centered">
        <div class="login">
            {% if error %}
                <div class="error_msg">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form_connexion_logo">
              <img src="{{ asset('img/logo.png') }}" height="60" width="60" alt="Logo">
              Connexion
            </div>
            <form action="{{ path('app_login') }}" method="post">
            <div class="field">
              <div class="control">
                <input class="input is-medium is-rounded" type="email" placeholder="hello@example.com" autocomplete="username" name="_username" required />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input class="input is-medium is-rounded" type="password" placeholder="**********" autocomplete="current-password" name="_password" required />
              </div>
            </div>
            <br />
            <button class="button is-block is-fullwidth is-primary is-medium is-rounded" type="submit">
              Connexion
            </button>
          </form>
          <br>
          <nav class="level">
            <div class="level-item has-text-centered">
              <div>
                <a href="#">Mot de passe oublié</a>
              </div>
            </div>
            <div class="level-item has-text-centered">
              <div>
                <a href="{{path('app_user_new')}}">Créer un compte</a>
              </div>
            </div>
          </nav>
        </div>
      </div>
    </section>
{% endblock %}